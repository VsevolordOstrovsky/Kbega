                        android:textColor="@color/darkText" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:text=" выплата по кредитным карточкам:"
                        android:textColor="@color/darkText" />

                    <TextView
